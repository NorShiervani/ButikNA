<Page x:Class="ProjektButikNA.OrderHistory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjektButikNA"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrderHistory" Background="White">
    <Border>
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Order History" FontSize="25" Foreground="Purple" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="170"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="170"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Date from:" FontSize="16" Foreground="Purple" Grid.Column="0" VerticalAlignment="Center" />
                <DatePicker FontSize="16" Foreground="Purple" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Width="150" />
                <TextBlock Text="Date to:" FontSize="16" Foreground="Purple" Grid.Column="2" VerticalAlignment="Center" />
                <DatePicker FontSize="16" Foreground="Purple" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Left" Width="150" />
                <Button Width="140" Height="30" FontSize="14" Grid.Column="4" Content="Search" Background="Purple" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Right" />
            </Grid>
            <DataGrid x:Name="dgvOrderHistory" Grid.Row="2" HorizontalAlignment="Left" IsReadOnly="true" ItemsSource="{Binding ShoppingCart}">
                <DataGrid.Resources>
                    <Style TargetType="{ x:Type DataGridColumnHeader}">
                        <Setter Property="Background" Value="Purple" />
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="FontSize" Value="14" />
                        <Setter Property="Height" Value="30" />
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                    <Style TargetType="{ x:Type DataGridCell}">
                        <Setter Property="Background" Value="White" />
                        <Setter Property="Foreground" Value="Purple" />
                        <Setter Property="FontSize" Value="14" />
                        <Setter Property="Height" Value="30" />
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                    </Style>
                    <Style TargetType="{ x:Type DataGridRow}">
                        <Setter Property="Background" Value="White" />
                        <Setter Property="BorderBrush" Value="Purple"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="#" Width="0.5*" Binding="{Binding ShoppingCartId}" />
                    <DataGridTextColumn Header="Date registered" Width="*" Binding="{Binding DateRegistered}" />
                    <DataGridTextColumn Header="Items" Width="*" Binding="{Binding Products}"/>
                    <DataGridTextColumn Header="Coupon" Width="*" Binding="{Binding Coupon.Discount}"/>
                    <DataGridTextColumn Header="Total cost (Incl. Coupon)" Width="*" Binding="{Binding TotalCostInclCoupon}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
    
    
</Page>
